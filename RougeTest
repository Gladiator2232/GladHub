--------------------------------------------------------------------------------
-- TARGET FINDER
--------------------------------------------------------------------------------

local targetNavigatorElement = nil
local targetPath = {"HUD", "Bar", "List", "Quest", "Bar", "Cancel", "Button"}

local function findTargetElement()
    local current = playerGui
    for _, name in ipairs(targetPath) do
        current = current:WaitForChild(name, 60)
    end
    current.Selectable = true
    return current
end

task.spawn(function()
    targetNavigatorElement = findTargetElement()
end)

--------------------------------------------------------------------------------
-- DRAGGING
--------------------------------------------------------------------------------

local isDragging = false
local dragStart
local startPos
local dragConn

local function startDrag(input)
    if input.UserInputType ~= Enum.UserInputType.MouseButton1 then return end
    isDragging = true
    dragStart = input.Position
    startPos = windowFrame.Position

    dragConn = RunService.RenderStepped:Connect(function()
        if isDragging then
            local delta = UserInputService:GetMouseLocation() - dragStart
            windowFrame.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end)
end

titleBar.InputBegan:Connect(startDrag)
titleLabel.InputBegan:Connect(startDrag)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        isDragging = false
        if dragConn then dragConn:Disconnect() dragConn = nil end
    end
end)

closeButton.MouseButton1Click:Connect(function()
    windowFrame.Visible = false
end)

--------------------------------------------------------------------------------
-- VIRTUAL INPUT CLICK (VECTOR2 FIX)
--------------------------------------------------------------------------------

local function pressButtonVirtual(btn)
    if not btn or not btn.AbsolutePosition then return end

    local insetX, insetY = GuiService:GetGuiInset()
    local pos = btn.AbsolutePosition
    local size = btn.AbsoluteSize

    local x = pos.X + size.X/2 + insetX
    local y = pos.Y + size.Y/2 + insetY

    VInput:SendMouseButtonEvent(Vector2.new(x, y), 0, true, game, 1)
    task.wait()
    VInput:SendMouseButtonEvent(Vector2.new(x, y), 0, false, game, 1)

    print("ðŸ”¥ Clicked real UI:", btn.Name)
end

--------------------------------------------------------------------------------
-- TOGGLE UI NAVIGATION
--------------------------------------------------------------------------------

local function toggleUiNavigation()
    local circle = toggleCircle

    -- turning off navigation
    if GuiService.SelectedObject then
        GuiService.SelectedObject = nil
        logicButton.BackgroundColor3 = Color3.fromRGB(50,50,50)
        circle.BackgroundColor3 = Color3.fromRGB(80,80,80)
        return
    end

    -- turning on navigation
    GuiService.SelectedObject = targetNavigatorElement
    logicButton.BackgroundColor3 = Color3.fromRGB(39,174,96)
    circle.BackgroundColor3 = Color3.fromRGB(255,255,255)

    task.wait(0.05)
    pressButtonVirtual(targetNavigatorElement)
end

UserInputService.InputBegan:Connect(function(input, gpe)
    if not gpe and input.KeyCode == Enum.KeyCode.BackSlash then
        toggleUiNavigation()
    end
end)

logicButton.MouseButton1Click:Connect(toggleUiNavigation)

--------------------------------------------------------------------------------
-- FPS / PING / MEMORY
--------------------------------------------------------------------------------

local currentFps = 0

RunService.RenderStepped:Connect(function(dt)
    currentFps = 1 / dt
end)

task.spawn(function()
    while true do
        if windowFrame.Visible then
            local ping = math.floor(player:GetNetworkPing()*1000)
            local mem = StatsService:GetTotalMemoryUsageMb()
            local fps = math.floor(currentFps + 0.5)
            statsLabel.Text = ("FPS: %d  Ping: %dms  Mem: %.0fMB"):format(fps, ping, mem)
        end
        task.wait(0.5)
    end
end)
